<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <com.example.testgame.StatusBoardView
        android:id="@+id/status_board"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_gravity="top|start" />

    <!-- Camera pan buttons moved to bottom-right. Buttons show direction labels for clarity -->
    <LinearLayout
        android:id="@+id/camera_buttons_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp"
        android:layout_gravity="bottom|end"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/button_pan_up"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="#FF000000"
                android:textColor="#FFFFFFFF"
                android:text="上"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!-- Right and Left swapped: place '右' (right) on the left side visually -->
            <Button
                android:id="@+id/button_pan_right"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="#FF000000"
                android:textColor="#FFFFFFFF"
                android:text="左"
                android:textSize="14sp" />

            <View
                android:layout_width="8dp"
                android:layout_height="48dp" />

            <Button
                android:id="@+id/button_pan_left"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="#FF000000"
                android:textColor="#FFFFFFFF"
                android:text="右"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/button_pan_down"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="#FF000000"
                android:textColor="#FFFFFFFF"
                android:text="下"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

    <!-- Debug controls: move all / reset all placed above camera buttons -->
    <LinearLayout
        android:id="@+id/debug_buttons_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="8dp"
        android:layout_gravity="bottom|center_horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/button_move_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Move All"
            android:background="#AA000000"
            android:textColor="#FFFFFFFF"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/button_reset_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset All"
            android:background="#AA000000"
            android:textColor="#FFFFFFFF" />

    </LinearLayout>

</FrameLayout>